<!DOCTYPE html>
<html>
<head>
    <title>All Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .project-card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body class="bg-light">

<div class="container py-5">

    <h1 class="mb-4 text-center">All Projects</h1>

    <div class="text-center mb-4">
        <a href="/stats" class="btn btn-info">View Funding Stats</a> <!-- เปลี่ยนข้อความ -->
    </div>

    <form method="get" action="/" class="row g-2 mb-4 justify-content-center">
        <div class="col-auto">
            <input type="text" class="form-control" name="search" placeholder="Search projects" value="<%= search || '' %>">
        </div>
        <div class="col-auto">
            <select name="category" class="form-select">
                <option value="">All Categories</option>
                <% categories.forEach(c => { %>
                    <option value="<%=c.category_id%>" <% if (c.category_id == selectedCategory) { %>selected<% } %>><%=c.category_name%></option>
                <% }) %>
            </select>
        </div>
        <div class="col-auto">
            <select name="sort" class="form-select">
                <option value="">Sort By</option>
                <option value="newest" <% if(sort==='newest'){%>selected<%}%>>Newest</option>
                <option value="deadline" <% if(sort==='deadline'){%>selected<%}%>>Closest Deadline</option>
                <option value="funding" <% if(sort==='funding'){%>selected<%}%>>Most Funded</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    <div class="row">
        <% projects.forEach(p => { %>
            <div class="col-md-6 col-lg-4 project-card">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <a href="/project/<%=p.project_id%>"><h5 class="card-title"><%=p.project_name%></h5></a>
                        <p class="card-text">
                            Goal: <%= p.funding_goal.toLocaleString('en-US', { style:'currency', currency:'USD' }) %><br>
                            Raised: <%= p.current_funding.toLocaleString('en-US', { style:'currency', currency:'USD' }) %><br>
                            Deadline: <%= new Date(p.deadline).toLocaleDateString('en-US', { year:'numeric', month:'short', day:'numeric' }) %>
                        </p>

                        <% let percent = Math.min((parseFloat(p.current_funding) / parseFloat(p.funding_goal)) * 100, 100); %>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: <%= percent %>%;" aria-valuenow="<%= percent %>" aria-valuemin="0" aria-valuemax="100"><%= Math.floor(percent) %>%</div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

</div>

</body>
</html>
